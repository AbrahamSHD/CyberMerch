generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id       String    @id @unique @default(uuid())
  name     String
  price    Float
  products Product[]
}

model Product {
  id          String   @id @unique @default(uuid())
  name        String
  description String?
  createdAt   DateTime @db.Timestamp()
  updatedAt   DateTime @updatedAt()
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}
